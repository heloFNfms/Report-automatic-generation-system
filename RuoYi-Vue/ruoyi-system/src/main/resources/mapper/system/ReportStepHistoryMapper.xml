<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ReportStepHistoryMapper">
    
    <resultMap type="ReportStepHistory" id="ReportStepHistoryResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="step"    column="step"    />
        <result property="version"    column="version"    />
        <result property="outputJson"    column="output_json"    />
        <result property="executionTime"    column="execution_time"    />
        <result property="status"    column="status"    />
        <result property="errorMessage"    column="error_message"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectReportStepHistoryVo">
        select id, task_id, step, version, output_json, execution_time, status, error_message, create_time from report_step_history
    </sql>

    <select id="selectReportStepHistoryList" parameterType="ReportStepHistory" resultMap="ReportStepHistoryResult">
        <include refid="selectReportStepHistoryVo"/>
        <where>  
            <if test="taskId != null  and taskId != ''"> and task_id = #{taskId}</if>
            <if test="step != null  and step != ''"> and step = #{step}</if>
            <if test="version != null "> and version = #{version}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectReportStepHistoryById" parameterType="Long" resultMap="ReportStepHistoryResult">
        <include refid="selectReportStepHistoryVo"/>
        where id = #{id}
    </select>

    <select id="selectReportStepHistoryByTaskId" parameterType="String" resultMap="ReportStepHistoryResult">
        <include refid="selectReportStepHistoryVo"/>
        where task_id = #{taskId}
        order by step, version desc
    </select>

    <select id="selectReportStepHistoryByTaskIdAndStep" resultMap="ReportStepHistoryResult">
        <include refid="selectReportStepHistoryVo"/>
        where task_id = #{taskId} and step = #{step}
        order by version desc
    </select>

    <select id="selectReportStepHistoryByTaskIdAndStepAndVersion" resultMap="ReportStepHistoryResult">
        <include refid="selectReportStepHistoryVo"/>
        where task_id = #{taskId} and step = #{step} and version = #{version}
    </select>
        
    <insert id="insertReportStepHistory" parameterType="ReportStepHistory" useGeneratedKeys="true" keyProperty="id">
        insert into report_step_history
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id,</if>
            <if test="step != null and step != ''">step,</if>
            <if test="version != null">version,</if>
            <if test="outputJson != null">output_json,</if>
            <if test="executionTime != null">execution_time,</if>
            <if test="status != null">status,</if>
            <if test="errorMessage != null">error_message,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">#{taskId},</if>
            <if test="step != null and step != ''">#{step},</if>
            <if test="version != null">#{version},</if>
            <if test="outputJson != null">#{outputJson},</if>
            <if test="executionTime != null">#{executionTime},</if>
            <if test="status != null">#{status},</if>
            <if test="errorMessage != null">#{errorMessage},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateReportStepHistory" parameterType="ReportStepHistory">
        update report_step_history
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id = #{taskId},</if>
            <if test="step != null and step != ''">step = #{step},</if>
            <if test="version != null">version = #{version},</if>
            <if test="outputJson != null">output_json = #{outputJson},</if>
            <if test="executionTime != null">execution_time = #{executionTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="errorMessage != null">error_message = #{errorMessage},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteReportStepHistoryById" parameterType="Long">
        delete from report_step_history where id = #{id}
    </delete>

    <delete id="deleteReportStepHistoryByIds" parameterType="String">
        delete from report_step_history where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteReportStepHistoryByTaskId" parameterType="String">
        delete from report_step_history where task_id = #{taskId}
    </delete>
</mapper>