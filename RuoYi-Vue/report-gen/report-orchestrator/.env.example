# 环境配置示例文件
# 复制此文件为 .env 并填入实际配置

# DeepSeek API配置
DEEPSEEK_API_KEY=
DEEPSEEK_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# DeepSeek 高级配置
DEEPSEEK_MAX_RETRIES=3
DEEPSEEK_RETRY_DELAY=1.0
DEEPSEEK_RETRY_BACKOFF=2.0
DEEPSEEK_TIMEOUT=60.0
DEEPSEEK_RATE_LIMIT_PER_MINUTE=60
DEEPSEEK_RATE_LIMIT_PER_HOUR=3600

# MCP服务配置
MCP_BASE=http://localhost:8000

# 数据库配置
MYSQL_DSN=mysql+asyncmy://root:password@localhost:3306/analyze_db?charset=utf8mb4

# Vector Store Configuration
# Backend type: faiss (local) or pgvector (PostgreSQL)
VECTOR_BACKEND=faiss
VECTOR_DIMENSION=768

# FAISS Configuration (when VECTOR_BACKEND=faiss)
FAISS_INDEX_PATH=./data/faiss.index
FAISS_META_PATH=./data/faiss_meta.json

# PGVector Configuration (when VECTOR_BACKEND=pgvector)
# PG_DSN=postgresql://user:password@localhost:5432/dbname
PG_DSN=
PG_VECTOR_TABLE=vectors

# Vector Store Performance
VECTOR_BATCH_SIZE=100
VECTOR_SEARCH_K=10
VECTOR_CACHE_TTL=3600

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 安全配置
SECURITY_ENABLED=false
RATE_LIMIT_ENABLED=false